<style>
    .float-center, .card-title {
        text-align: center
    }
</style>



<form action="/apply" method="post">


    <input type="hidden" name="property_identity" value="{{property_identity}}">
    <input type="hidden" name="block_identity" value="{{block_identity}}">


    <div class="row question-board">
        <div class="col s12 md2"></div>
        <div class="col s12 m12">
            <div class="card  darken-1">
                <div class="card-content ">

                    <span class="card-title"> Property Booking Form </span>


                    <div class="row">
                        <div class="col s12">
                            <div class="row">
                                <div class="input-field col s12">
                                    {{!-- <i class="material-icons prefix">textsms</i> --}}
                                    <input type="text" id="Your-name-input" class="Your-name">
                                    <label for="Your-name-input" name="your_name">Your name</label>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col s12">
                            <div class="row">
                                <div class="input-field col s12">
                                    {{!-- <i class="material-icons prefix">textsms</i> --}}
                                    <input type="text" id="Your-email-input" class="Your-email">
                                    <label for="Your-email-input" name="your_email">Your email</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12">
                            <div class="row">
                                <div class="input-field col s12 float-center">
                                    <button class="btn waves-effect waves-light " type="submit" name="action">
                                        Submit Request
                                        <i class="material-icons right">send</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>